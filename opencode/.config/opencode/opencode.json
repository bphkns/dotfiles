{
  "$schema": "https://opencode.ai/config.json",
  "theme": "bamboo",
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}",
      "enabled": true
    },
    "tanstack": {
      "type": "local",
      "command": ["npx", "-y", "@tanstack/cli@0.59.0", "mcp"]
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "oauth": {}
    }
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5.3-codex": {
          "name": "GPT 5.3 Codex",
          "capabilities": {
            "reasoning": true
          },
          "variants": {
            "low": {
              "reasoningEffort": "low"
            },
            "medium": {
              "reasoningEffort": "medium"
            },
            "high": {
              "reasoningEffort": "high"
            }
          }
        }
      }
    }
  },
  "autoshare": false,
  "autoupdate": true,
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3",
    "@nick-vi/opencode-type-inject@1.5.1",
    "opencode-pty@0.2.0",
    "opencode-anthropic-auth@0.0.13"
  ],
  "instructions": [
    "/home/bikash/.config/opencode/instructions/global.md",
    "/home/bikash/.config/opencode/plugin/shell-strategy/shell_strategy.md"
  ],
  "agent": {
    "socratic-tutor": {
      "description": "Socratic teaching mode - guides learning through questions",
      "mode": "primary",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "glob": true,
        "grep": true,
        "webfetch": true,
        "todo": true,
        "task": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "allow"
        },
        "webfetch": "allow",
        "question": "allow"
      }
    }
  }
}
