{
  "$schema": "https://opencode.ai/config.json",
  "theme": "bamboo",
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}",
      "enabled": true
    }
  },
  "autoshare": false,
  "autoupdate": true,
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3",
    "@nick-vi/opencode-type-inject@1.3.1",
    "opencode-pty@0.1.4",
    "/home/bikash/dev/oc-plugins/morph-fast-apply",
    "opencode-gemini-auth@1.3.7"
  ],
  "instructions": [
    "/home/bikash/.config/opencode/instructions/global.md",
    "/home/bikash/.config/opencode/plugin/shell-strategy/shell_strategy.md",
    "/home/bikash/dev/oc-plugins/morph-fast-apply/MORPH_INSTRUCTIONS.md"
  ]
}
